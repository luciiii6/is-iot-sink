<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<setup>
    <name>Sink</name>
    <location>
        <!-- Sibiu, Romania-->
        <latitude>41.8</latitude>
        <longitude>24.15</longitude>
    </location>
    <mqtt>
        <host>broker.emqx.io</host>
        <topics>
            <collector>
                <registration>/collector/registration/</registration>
                <data>/collector/data/</data>
            </collector>
            <valves>
                <control>/valves/control/</control>
                <request>/valves/status/request/</request>
                <response>/valves/status/response/</response>
            </valves>
            <irrigation>
                <mode>/irrigation/mode/</mode>
            </irrigation>
        </topics>
    </mqtt>
    <valves>
        <count>6</count>
        <gpios>14,15,18,23,24,25</gpios>
    </valves>
    <mongo>
        <db>Thuia</db>
        <collections>
            <readings>readings</readings>
            <valves>valves</valves>
            <users>users</users>
        </collections>
    </mongo>
    <collectors>
        <!-- Time in seconds. 1h = 3600s -->
        <expireTime>3600</expireTime>
    </collectors>
    <irrigation>
        <initialMode>manual</initialMode>
    </irrigation>
</setup>
