<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<setup>
    <name>Sink</name>
    <location>
        <!-- Sibiu, Romania-->
        <latitude>41.8</latitude>
        <longitude>24.15</longitude>
    </location>
    <mqtt>
        <host>broker.emqx.io</host>
        <topics>
            <registration>/registration/</registration>
            <collectedData>/data/</collectedData>
            <valves>
                <control>/valves/control/</control>
                <request>/valves/status/request/</request>
                <response>/valves/status/response/</response>
            </valves>
        </topics>
    </mqtt>
    <valves>
        <count>6</count>
        <gpios>14,15,18,23,24,25</gpios>
    </valves>
    <mongo>
        <db>Thuia</db>
        <collections>
            <readings>readings</readings>
            <valves>valves</valves>
            <users>users</users>
        </collections>
    </mongo>
</setup>
